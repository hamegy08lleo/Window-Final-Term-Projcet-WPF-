<Page x:Class="Window_Final_Term_Projcet__WPF_.Login_and_Register.PLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Window_Final_Term_Projcet__WPF_.Login_and_Register"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="700"
      Title="PLogin">
        <Grid Background="White">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="440*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/BackgroundIMG/login.jpg" HorizontalAlignment="Left" VerticalAlignment="Top" Height="587" Stretch="Fill" />
                </Grid>
                <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="180"/>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="140"/>
                                <RowDefinition Height="100"/>

                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                                <Label Content="We are" FontSize="22" VerticalContentAlignment="Bottom" Foreground="#FF989898" FontWeight="Bold"/>
                                                <Label Content="Horizon Trail Travel" FontSize="30" VerticalContentAlignment="Bottom" Padding="5,5,5,1.5" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel>
                                                <Label Content="Welcome back! Log in to your" FontSize="16"/>
                                                <Label Content="account to view your deal" FontSize="16"/>

                                        </StackPanel>
                                </StackPanel>
                        </Grid>
                        <StackPanel Grid.Row ="1" Orientation="Horizontal">

                                <Image Source="/BackgroundIMG/person.png" Stretch="Fill" Width="35" Height="35" VerticalAlignment="Top"/>

                                <TextBox x:Name="txtUsername" Text ="Username or email" Foreground="Gray" FontSize="20" Height="35" 
                                        VerticalAlignment="Top" HorizontalAlignment="Left" Width="300"  GotFocus="txtUsername_GotFocus" LostFocus="txtUsername_LostFocus" BorderBrush="Black" Padding="10,2,0,0">
                                        <TextBox.Resources>
                                                <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="20"/>
                                                </Style>
                                        </TextBox.Resources>
                                </TextBox>
                        </StackPanel>
                        <Image Source="/BackgroundIMG/locked-computer.png" Grid.Row="2"  Stretch="Fill" Width="28" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="3,5.9,0,0"/>

                        <PasswordBox x:Name="pabPassword" FontSize="20" Height="35" 
                                    VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Grid.Row="2" 
                                    LostFocus="pabPassword_LostFocus" Margin="35,0,0,0" Padding="10,2,0,0" BorderBrush="{x:Null}">
                        </PasswordBox>
                        <TextBox x:Name="txtPassword" Text ="Password" Foreground="Gray" FontSize="20" Height="35" 
                                VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" 
                                Grid.Row="2" GotFocus="txtPassword_GotFocus" Margin="35,0,0,0" Padding="10,2,0,0" BorderBrush="Black">
                                <TextBox.Resources>
                                        <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="20"/>
                                        </Style>
                                </TextBox.Resources>
                        </TextBox>
                        <Button x:Name="btnLogin" Grid.Row="2" Width="150" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,36,85" Content="Login" Click="btnLogin_Click" FontSize="16" FontWeight="SemiBold" Grid.RowSpan="2" BorderBrush="{x:Null}" Background="#FF44DBFE" Foreground="Black">
                                <Button.Resources>
                                        <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="30"/>
                                        </Style>
                                </Button.Resources>
                        </Button>


                        <Grid Grid.Row="3">
                                <Button x:Name="btnRegister" Content="Create your Account" Background="{x:Null}" BorderBrush="{x:Null}" Margin="216,46,13,-2" Click="btnRegister_Click"/>
                        </Grid>
                </Grid>
        </Grid>
</Page>
