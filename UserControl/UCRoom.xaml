<UserControl x:Class="Window_Final_Term_Projcet__WPF_.UCRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Window_Final_Term_Projcet__WPF_"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
        <Border BorderThickness="2" Width="800" Height="150">
                <Border CornerRadius="25" BorderThickness="5" BorderBrush="Black" Padding="0" Background="White">
                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="500"/>
                                        <ColumnDefinition Width="300"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Height="200" Width="5" Grid.Column="0" HorizontalAlignment="Right" Fill="Black"/>
                                <Label x:Name="lblRoomType" Grid.Column="0" Content="Loại Phòng" FontSize="50" 
                       VerticalContentAlignment="Center" Padding="30,5,5,5" FontWeight="SemiBold"/>
                                <Button x:Name="btnChooseRoom" Grid.Column="1" Content="Choose" BorderBrush="{x:Null}" Background="#FFEF5E26" Height="100" Width="250" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,12,0">
                                        <Button.Resources>
                                                <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="25"/>
                                                </Style>
                                        </Button.Resources>
                                </Button>
                        </Grid>
                </Border>
        </Border>
</UserControl>
